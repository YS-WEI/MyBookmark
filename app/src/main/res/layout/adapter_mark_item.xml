<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?android:attr/selectableItemBackground"
    >

    <data>

        <variable
            name="markData"
            type="com.example.mybookmark.db.model.Mark" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/x4">

        <ImageView
            android:id="@+id/image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/x3"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/x2"
            imageUrl="@{markData.image}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{markData.name}"
                style="@style/CommonTitleText"/>

            <TextView
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:text="@{String.format(@string/show_part_format, markData.readPart, markData.totalPart)}"
                style="@style/CommonContentText"/>

        </LinearLayout>

    </LinearLayout>

</layout>