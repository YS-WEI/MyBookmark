<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?android:attr/selectableItemBackground"
        >

    <data>

        <variable
            name="markData"
            type="com.example.mybookmark.db.model.Mark" />
    </data>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x3">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <ImageView
                    android:id="@+id/image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    imageUrl="@{markData.image}"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x1"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/text_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{markData.name}"
                        style="@style/CommonContentText"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/text_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x1"
                        android:gravity="center_horizontal"
                        android:text="@{String.format(@string/show_part_format, markData.readEpisode, markData.totalEpisode)}"
                        style="@style/CommonMinText"/>

                <TextView
                        android:id="@+id/text_update_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x1"
                        android:gravity="right"
                        lastTimeDate="@{markData.lastTimeDate}"
                        updateDate="@{markData.updateDate}"
                        style="@style/CommonMinText"/>


            </LinearLayout>

        </LinearLayout>

        <View
                android:id="@+id/vRead"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/x1"
                android:layout_marginRight="@dimen/x1"
                android:layout_width="@dimen/x2"
                android:layout_height="@dimen/x2"
                android:background="@drawable/red_point"/>
    </RelativeLayout>


</layout>